<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/topLayout" 
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
    
	<FrameLayout
		android:id="@+id/mainLayout"
		android:orientation="vertical"
		android:layout_width="640px"
		android:layout_height="480px"/>

	<LinearLayout
		android:gravity="bottom|center_horizontal"
		android:id="@+id/optionsLayout"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<Button
			android:id="@+id/full_bright"
			android:text="@string/full_bright"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<Button
			android:id="@+id/half_bright"
			android:text="@string/half_bright"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<Button
			android:id="@+id/quarter_bright"
			android:text="@string/quarter_bright"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<Button
			android:id="@+id/dim_bright"
			android:text="@string/dim_bright"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<Button
			android:id="@+id/low_bright"
			android:text="@string/low_bright"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
</FrameLayout>